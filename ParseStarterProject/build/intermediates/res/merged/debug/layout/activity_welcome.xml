<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.starter.WelcomeActivity">


    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/welcomeWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <Button
        android:layout_width="155dp"
        android:layout_height="65dp"
        android:text="Login"
        android:id="@+id/loginBtt"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="101dp" />

    <Button
        android:layout_width="155dp"
        android:layout_height="65dp"
        android:text="Sign Up"
        android:id="@+id/signUpBttn"
        android:textSize="25dp"
        android:layout_alignTop="@+id/loginBtt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/welcomeTitle"
        android:text="Waffle"
        android:textStyle="bold"
        android:textColorHint="@color/ripple_material_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textSize="45dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:hint="username"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="password"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:id="@+id/forgotPassword"
        android:layout_below="@+id/signUpBttn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:onClick="forgotPassword"
        android:clickable="true"/>


</RelativeLayout>
